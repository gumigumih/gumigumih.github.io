---
export interface Props {
  id?: string
  eyebrow?: string
  title: string
  lead?: string
  bgClass?: string
  eyebrowClass?: string
  titleClass?: string
  leadClass?: string
}

const {
  id,
  eyebrow,
  title,
  lead,
  bgClass = 'bg-white',
  eyebrowClass = 'text-slate-500',
  titleClass = 'text-slate-900',
  leadClass = 'text-slate-600',
} = Astro.props as Props

const hasLeadSlot = Astro.slots.has('lead')
const hasBodySlot = Astro.slots.has('default')
const showLead = hasLeadSlot || !!lead
---

<section id={id} class={`relative z-10 py-20 px-4 md:px-8 ${bgClass}`}>
  <div class="max-w-5xl mx-auto">
    {eyebrow && (
      <div class="flex items-center gap-3">
        <span class="h-0.5 w-10 bg-amber-500"></span>
        <span class={`uppercase tracking-[0.25em] text-xs ${eyebrowClass}`}>{eyebrow}</span>
      </div>
    )}
    <h2 class={`text-2xl md:text-3xl font-black leading-tight mt-4 ${titleClass}`}>{title}</h2>

    {showLead && (
      <div class="mt-8 md:mt-10">
        {hasLeadSlot ? (
          <slot name="lead" />
        ) : (
          <p class={`text-base md:text-lg max-w-4xl ${leadClass}`}>{lead}</p>
        )}
      </div>
    )}

    {hasBodySlot && (
      <div class="mt-8 md:mt-10">
        <slot />
      </div>
    )}
  </div>
</section>
