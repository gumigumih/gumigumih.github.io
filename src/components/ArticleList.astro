---
import 'swiper/css/bundle'
import articlesData from '../../public/articles.json' assert { type: 'json' }

const articles = (articlesData as any)?.data?.contents ?? []
const formatDate = (s: string) => new Date(s).toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })
const getArticleUrl = (a: any) => {
  switch (a.type) {
    case 'note': return `https://note.com/gumigumih/n/${a.key}`
    case 'qiita': return `https://qiita.com/gumigumih/items/${a.key}`
    case 'zenn': return `https://zenn.dev/gumigumih/articles/${a.key}`
    default: return `https://note.com/gumigumih/n/${a.key}`
  }
}
---
<div class="relative" id="article-list-root">
  <div class="swiper swiper-container">
    <div class="swiper-wrapper" id="articles-wrapper">
      {articles.map((a: any) => {
        const img = a.localImagePath || a.eyecatch
        const tags = (a.hashtags || []) as any[]
        return (
          <div class="swiper-slide">
            <a href={getArticleUrl(a)} target="_blank" rel="noopener noreferrer" class="bg-white border-2 border-slate-400 hover:-translate-y-0.5 hover:shadow-lg hover:border-slate-500 transform transition-all duration-200 block">
              <div class="aspect-[1200/630] overflow-hidden">
                <img src={img} alt={a.name} class="w-full h-full object-cover" loading="lazy" decoding="async" />
              </div>
              <div class="p-4 space-y-4">
                <div class="flex items-center gap-2">
                  <h3 class="text-lg font-bold text-slate-800 font-raleway line-clamp-2" title={a.name}>{a.name}</h3>
                </div>
                <div class="flex gap-2 px-1">
                  <span class="fa-solid fa-tag text-slate-400 text-xs" aria-hidden="true"></span>
                  <span class="text-xs text-slate-500 line-clamp-1" title={tags.map((t) => t.hashtag?.name)}>
                    {tags.map((t) => t.hashtag?.name+" ")}
                  </span>
                </div>
                <div class="flex gap-2 px-1">
                  <span class="fa-regular fa-calendar text-slate-400" aria-hidden="true"></span>
                  <p class="text-slate-500 text-xs">{formatDate(a.publishAt)}</p>
                </div>
              </div>
            </a>
          </div>
        )
      })}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
import Swiper from 'swiper/bundle'

export function initArticleList() {
  const wrapper = document.getElementById('articles-wrapper')
  if (!wrapper) return

  const initSwiper = (root) => {
    const nextButton = root.querySelector('.swiper-button-next')
    const prevButton = root.querySelector('.swiper-button-prev')
    const pagination = root.querySelector('.swiper-pagination')
    const swiper = new Swiper(root, {
      slidesPerView: 1,
      spaceBetween: 10,
      // loop: true,
      autoplay: { delay: 5000, disableOnInteraction: false, pauseOnMouseEnter: true },
      pagination: { el: pagination, clickable: true, dynamicBullets: true },
      navigation: { nextEl: nextButton, prevEl: prevButton, disabledClass: 'swiper-button-disabled' },
      breakpoints: {
        640: { slidesPerView: 1 },
        768: { slidesPerView: 2 },
        1024: { slidesPerView: 3 },
      },
    })

    root.addEventListener('mouseenter', () => swiper.autoplay?.stop())
    root.addEventListener('mouseleave', () => swiper.autoplay?.start())
  }

  const root = wrapper.closest('.swiper')
  if (root) initSwiper(root)
}

initArticleList()
</script>

<style>
  :global(.swiper-container) {
    padding-bottom: 6rem !important;
    overflow: hidden !important;
    position: relative !important;
  }

  :global(.swiper-button-next),
  :global(.swiper-button-prev) {
    position: absolute !important;
    top: auto !important;
    bottom: 24px !important;
    transform: none !important;
    /* width: 48px !important;
    height: 48px !important; */
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    z-index: 10 !important;
    color: rgb(148 163 184) !important;
  }

  :global(.swiper-button-next:hover),
  :global(.swiper-button-prev:hover) {
    color: rgb(100 116 139) !important;
  }

  :global(.swiper-slide) {
    height: auto !important;
    display: flex !important;
    padding: 0.5rem !important;
  }

  :global(.swiper-button-next::after),
  :global(.swiper-button-prev::after) {
    font-size: 18px !important;
    font-weight: bold !important;
    font-family: "Font Awesome 6 Free" !important;
  }

  :global(.swiper-button-next::after) {
    content: "\f054" !important;
  }

  :global(.swiper-button-prev::after) {
    content: "\f053" !important;
  }

  :global(.swiper-pagination) {
    position: absolute !important;
    bottom: 40px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    margin-top: 0 !important;
  }

  :global(.swiper-pagination-bullet) {
    width: 12px !important;
    height: 12px !important;
    background: rgb(148 163 184) !important;
    opacity: 1 !important;
    transition: all 0.3s ease !important;
    margin: 0 4px !important;
  }

  :global(.swiper-pagination-bullet-active),
  :global(.swiper-pagination-bullet:hover) {
    background: rgb(100 116 139) !important;
  }

  @media (max-width: 768px) {
    :global(.swiper-button-next),
    :global(.swiper-button-prev) {
      display: none !important;
    }
  }
</style>
