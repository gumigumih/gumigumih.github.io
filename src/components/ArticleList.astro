---
import 'swiper/css/bundle'
import articleListSrc from '../scripts/articleList.ts?url'
---
<div class="relative" id="article-list-root">
  <div class="swiper swiper-container">
    <div class="swiper-wrapper" id="articles-wrapper">
      <!-- slides will be injected -->
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script type="module" src={articleListSrc}></script>

<style>
  :global(.swiper-container) {
    padding-bottom: 6rem !important;
    overflow: hidden !important;
    position: relative !important;
  }

  :global(.swiper-button-next),
  :global(.swiper-button-prev) {
    position: absolute !important;
    top: auto !important;
    bottom: 24px !important;
    transform: none !important;
    width: 48px !important;
    height: 48px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    z-index: 10 !important;
    color: rgb(148 163 184) !important;
  }

  :global(.swiper-button-next:hover),
  :global(.swiper-button-prev:hover) {
    color: rgb(100 116 139) !important;
  }

  :global(.swiper-slide) {
    height: auto !important;
    display: flex !important;
    padding: 0.5rem !important;
  }

  :global(.swiper-button-next::after),
  :global(.swiper-button-prev::after) {
    font-size: 18px !important;
    font-weight: bold !important;
    font-family: "Font Awesome 6 Free" !important;
  }

  :global(.swiper-button-next::after) {
    content: "\f054" !important;
  }

  :global(.swiper-button-prev::after) {
    content: "\f053" !important;
  }

  :global(.swiper-pagination) {
    position: absolute !important;
    bottom: 40px !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    margin-top: 0 !important;
  }

  :global(.swiper-pagination-bullet) {
    width: 12px !important;
    height: 12px !important;
    background: rgb(148 163 184) !important;
    opacity: 1 !important;
    transition: all 0.3s ease !important;
    margin: 0 4px !important;
  }

  :global(.swiper-pagination-bullet-active),
  :global(.swiper-pagination-bullet:hover) {
    background: rgb(100 116 139) !important;
  }

  @media (max-width: 768px) {
    :global(.swiper-button-next),
    :global(.swiper-button-prev) {
      display: none !important;
    }
  }
</style>
