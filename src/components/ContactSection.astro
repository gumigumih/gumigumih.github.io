---
import ContactForm from './ContactForm.astro'
---

<section class="relative z-10 py-20 px-4 md:px-8 bg-slate-100" id="contact">
  <div class="max-w-5xl mx-auto">
    <div class="flex items-center gap-3 mb-4">
      <span class="h-0.5 w-10 bg-amber-500"></span>
      <span class="uppercase tracking-[0.25em] text-xs text-slate-500">contact</span>
    </div>
    <div class="max-w-4xl mx-auto py-10">
      <h2 class="text-2xl md:text-3xl font-black leading-tight">お問い合わせ</h2>
    </div>
    <ContactForm />
  </div>
</section>
